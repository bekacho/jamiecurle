<% content_for :title do %> <%= @post.title %> <% end %>

<% content_for :stylesheets do %>
	<link rel="stylesheet" href="/stylesheets/jamiecurle.edit.css" media="screen">
<% end %>

<%= form_for(@post) do |f| %>
	<fieldset>
		<%= f.text_field :title %>
	</fieldset>
		
	<fieldset>
		<%= f.text_area :body %>
	</fieldset>

	<fieldset>
		<%= f.submit %>
	</fieldset>


<% end %>




