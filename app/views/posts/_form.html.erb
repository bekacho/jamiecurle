<div class="post">
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<fieldset>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</fieldset>
	<fieldset>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</fieldset>
	<fieldset class="editor">
		<%= f.text_area :body %>
	</fieldset>
	<fieldset>
		<%= f.label :created_at %>
		<%= f.text_field :created_at %>
	</fieldset>
	<fieldset>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</fieldset>
	<fieldset>
		<%= f.label :published %>
		<%= f.check_box :published %>
	</fieldset>

	<fieldset>
		<input type="hidden" id="post_id" name="post_id" value="<%= @post.id %>">
		<%= f.submit %>
	</fieldset>
<% end %>
</div>

<div class="blog_images">
	<% @post.blog_images.each do |img| %><%= img.id %>
		<img src="<%= img.thumb %>" alt="<%= img.title %>" width="100" height="100">
	<% end %>
</div>